package javaexp.a09_inherit.abstrac;

public class A02_CompanyAbstract {

	public static void main(String[] args) {
		/*
		ex) 상위 추상 클래스 Company - 필드 회사명, working() 공통, earnMoney() 돈 버는 방법 - 추상
			하위 실제 클래스 HyunDai, Samsung
		*/

	}

}

abstract class Company {
	private String cname;

	public Company(String cname) {
		this.cname = cname;
	}
	
	public void working() {
		System.out.println(cname + " 가 일을 한다.");
	}
	
	public abstract void earnMoney();

	public String getCname() {
		return cname + " 회사가 ";
	}
	
	
}

abstract class HyunDai extends Company {

	public HyunDai(String cname) {
		super(cname);
	}

	@Override
	public void earnMoney() {
		System.out.println(getCname() +"현카 슈퍼 콘서트로 make money...");
		
	}
	
}

abstract class Samsung extends Company {

	public Samsung(String cname) {
		super(cname);
	}

	@Override
	public void earnMoney() {
		System.out.println("삼성 반도체 기술로");
		
	}
	
}
