class PwCheck extends Exception {
	PwCheck(String pw) {
		super("" + pw);
	}

	@Override
	public String getMessage() {
		String excep = "입력된 내용 : " + super.getMessage();
		System.out.println("비밀번호가 일치하지 않습니다.");
		return excep;
	}
	
}