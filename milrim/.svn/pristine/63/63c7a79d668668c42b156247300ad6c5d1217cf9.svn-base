/* Arrows */
.slick-prev,
.slick-next
{
    font-size: 0;
    line-height: 0;
    
    position: absolute;
    top: 50%;
    
    display: block;
    
    width: 20px;
    height: 20px;
    padding: 0;
    -webkit-transform: translate(0, -50%);
    -ms-transform: translate(0, -50%);
    transform: translate(0, -50%);
    
    cursor: pointer;
    
    color: transparent;
    border: none;
    outline: none;
    background: transparent;
    /* border: 2px solid red; */
}
.slick-prev:hover,
.slick-prev:focus,
.slick-next:hover,
.slick-next:focus
{
    color: transparent;
    outline: none;
    background: transparent;
}
.slick-prev:hover:before,
.slick-prev:focus:before,
.slick-next:hover:before,
.slick-next:focus:before
{
    opacity: 1;
}
.slick-prev.slick-disabled:before,
.slick-next.slick-disabled:before
{
    opacity: .25;
}

.slick-prev:before,
.slick-next:before
{
    font-family: 'slick';
    font-size: 20px;
    line-height: 1;

    opacity: 1;
    color: white;
    transition: all .2s ease-out;

    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    /* border: 2px solid yellow; */
}

.slick-prev:hover:before,
.slick-next:hover:before {
    background-color: #ffffff7a;
}

.slick-prev
{
    left: 0;
    bottom: 0;
    z-index: 3;
}
[dir='rtl'] .slick-prev
{
    right: -25px;
    left: auto;
}
.slick-prev:before
{
    position: absolute;
    bottom: -50px;
    left: 70px;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 40px;
    width: 40px;
    border-radius: 30px;
    opacity: .6;
    background-color: #ffffff89;
    content: url(../source/arrow_l.png); 
}
[dir='rtl'] .slick-prev:before
{
    content: '→';
}

.slick-next
{
    right: 0;
    bottom: 0;
    z-index: 3;
}
[dir='rtl'] .slick-next
{
    right: auto;
    left: -25px;
}
.slick-next:before
{
    position: absolute;
    bottom: -50px;
    right: 70px;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 40px;
    width: 40px;
    border-radius: 30px;
    opacity: .6;
    background-color: #ffffff89;
    content: url(../source/arrow_r.png); 
    /* 슬라이드 이동 버튼 이미지로 변경 */
}
[dir='rtl'] .slick-next:before
{
    content: '←';
}

/* Dots */
.slick-dotted.slick-slider
{
    margin-bottom: 30px;
}

.slick-dots
{
    position: absolute;
    bottom: -40px;

    display: block;

    width: 100%;
    padding: 0;
    margin: 0;

    list-style: none;

    text-align: center;
}
.slick-dots li
{
    position: relative;

    display: inline-block;

    width: 20px;
    height: 20px;
    margin: 0 5px;
    padding: 0;

    cursor: pointer;
}
.slick-dots li button
{
    font-size: 0;
    line-height: 0;

    display: block;

    width: 20px;
    height: 20px;
    padding: 5px;

    cursor: pointer;

    color: transparent;
    border: 0;
    outline: none;
    background: transparent;
}
.slick-dots li button:hover,
.slick-dots li button:focus
{
    outline: none;
}
.slick-dots li button:hover:before,
.slick-dots li button:focus:before
{
    opacity: 1;
}
.slick-dots li button:before
{
    font-size: 6px;
    line-height: 20px;

    position: absolute;
    bottom: 120px;
    left: 0;

    width: 13px;
    height: 13px;

    content: '';
    text-align: center;
    z-index: 3;

    opacity: .5;
    background-color: #fff;
    box-shadow: 0 0 8px #888;
    border-radius: 50%;
    transition: all .2s;

    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
.slick-dots li.slick-active button:before
{
    opacity: 1;
    color: black;
}