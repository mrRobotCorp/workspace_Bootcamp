/* 로그인 */
body{
    background-color: #F7F7F7;
}
section{
    margin: 0 auto;
    display: flex;
    justify-content: center;
    min-height: calc(100vh - 130px);
}
.logInner{
    margin-top: 230px;
    background-color: white;
    border-radius: 3px;
    width: 430px;
    height: 450px;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);

}  
.logForm{
    width: 385px;
    height: 410px;
}
.logForm h3{
    font-family: pMedium;
    font-size: 18px;
    color: #505050;
}
.logInput label{
    display: block;
    font-family: pMedium;
    margin-top: 40px;
    font-size: 18px;
    color: #505050;
}
.logInput input {
    border-bottom: solid 1px #b9b9b9;
    width: 380px;
    margin-top: 30px;
    font-family: pLight;
    font-size: 16px;
    padding-bottom: 15px;
}

.logBottom{
    margin-top: 30px;
    display: flex;
    justify-content: space-between;
    font-family: pMedium;
    font-size: 15px;
    color: #818181;
    align-items: center;
}
.logBottom a{
    font-family: pMedium;
    font-size: 15px;
    color: #818181;
}
.logBottom a:hover{
    color: var(--color-main);
}
.idSave{
    display: flex;
    align-items: center;
}
.idSave p{
    margin-left: 8px;
}
.logBtn{
    width: 385px;
    height: 53px;
    border-radius: 3px;
    margin-top: 40px;
    background-color: #d9d9d9;
    font-family: pSemi;
    font-size: 18px;
}
input[type="checkbox"]{
    display: none;
}
input[type="checkbox"]+label{
    display: inline-block;
    content: '';
    width: 15px;
    height: 15px;
    border: solid 1px #d9d9d9;
    position: relative;
    border-radius: 3px;
}
input[id="saveId"]:checked+label::after{
    content: '✓';
    color: var(--color-main);
    border: solid 1px var(--color-main);
    border-radius: 3px;
    font-size: 15px;
    width: 15px;
    height: 15px;
    text-align: center;
    position: absolute;
    left: -1px;
    top: -1px;
}
/* 회원가입 */
body{
    background-color: #F7F7F7;
}
section{
    margin: 0 auto;
    display: flex;
    justify-content: center;
    min-height: calc(100vh - 130px);
}
.joinInner{
    margin-top: 200px;
    margin-bottom: 200px;
    width: 430px;
    height: 1290px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white;
    border-radius: 3px;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}
.joinForm{
    width: 385px;
    height: 1250px;

}
.joinForm h3{
    font-family: pMedium;
    font-size: 18px;
    color: #505050;
}
input[type="number"]::-webkit-outer-spin-button,
input[type="number"]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

input[type="checkbox"]{
    display: none;
}
input[type="checkbox"]+label{
    display: inline-block;
    content: '';
    width: 15px;
    height: 15px;
    border: solid 1px #d9d9d9;
    position: relative;
    border-radius: 3px;
}
input.ckAgree:checked+label::after{
    content: '✓';
    color: var(--color-main);
    border: solid 1px var(--color-main);
    border-radius: 3px;
    font-size: 15px;
    width: 15px;
    height: 15px;
    text-align: center;
    position: absolute;
    left: -1px;
    top: -1px;
}
.logInput p{
    margin-top: 5px;
    font-family: pLight;
    color:  red;
}
.codeCheck{
    margin-top: 5px;
    font-family: pLight;
    color:  red;
}
.phoneInput label{
    display: block;
    font-family: pMedium;
    margin-top: 40px;
    font-size: 18px;
    color: #505050;
}
.phoneInput input {
    border-bottom: solid 1px #b9b9b9;
    width: 280px;
    margin-top: 30px;
    font-family: pLight;
    font-size: 16px;
    padding-bottom: 15px;
}
.phoneInner{
    display: flex;
    justify-content: space-between;
}
.codeBtn{
    width: 90px;
    height: 40px;
    margin-top: 83px;
    background-color: var(--color-sub);
    font-family: pLight;
    color: black;
    border-radius: 3px;
}
.agreeForm{
    margin-top: 40px;
    color: #505050;
}
.allAgree{
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
    padding-bottom: 20px;
    border-bottom: solid 1px #b9b9b9;
}
.agree{
    margin-top: 10px;
    display: flex;
    justify-content: space-between;
}

.joinBtn{
    width: 385px;
    height: 53px;
    border-radius: 3px;
    margin-top: 58px;
    background-color: #d9d9d9;
    font-family: pSemi;
    font-size: 18px;
    cursor: not-allowed;
}
.joinBtn.active {
    background-color: var(--color-main); /* 활성화된 버튼 색상 */
    color: white;
    cursor: pointer; /* 커서 모양을 활성화 상태로 설정 */
}