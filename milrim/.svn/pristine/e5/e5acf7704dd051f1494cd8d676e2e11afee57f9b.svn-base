section.banner .bn { height: 80vh; margin: 80px 0 50px 0; }

/* ------------------ search --------------------- */
input[name="tag"] {display: none;}
input[name="tag"] + label { padding: 5px 15px; margin-right: 5px; border-radius: 20px; border: 1.5px solid #333; font-size: 15px; cursor: pointer; transition: all .2s;}
input[name="tag"]:checked + label { color: #897200; background: #fffcd6; border-color: var(--color-sub);}

.bContent { width: 100%; height: 100%; display: flex; align-items: center; background-repeat: no-repeat; }
.bContent01 {  background: url(../source/banner01.jpg) center center; background-size: cover; }
.bContent02 { background: url(../source/banner02.jpg) center center; background-size: cover; }
.bContent03 { background: url(../source/banner01.jpg) center center; background-size: cover; }
.bContent04 { background: url(../source/banner02.jpg) center center; background-size: cover; }

.bContent p { margin-left: 200px; color: #fff; text-shadow: 1px 1px 4px #33333393; font-size: 27px; font-family: pBold; }

