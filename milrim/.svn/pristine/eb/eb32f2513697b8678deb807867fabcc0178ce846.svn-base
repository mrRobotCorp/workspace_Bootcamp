/* 로그인 */
body{
    background-color: #F7F7F7;
}
section{
    margin: 0 auto;
    display: flex;
    justify-content: center;
    min-height: calc(100vh - 130px);
}
.find{
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    width: 1000px;
}
.findInner{
    margin-top: 230px;
    margin-bottom: 150px;
    background-color: white;
    border-radius: 3px;
    width: 430px;
    height: 420px;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);

}  
.findForm{
    width: 385px;
    height: 360px;
}
.findForm h3{
    font-family: pMedium;
    font-size: 18px;
    color: #505050;
}
.findInput label{
    display: block;
    font-family: pMedium;
    margin-top: 40px;
    font-size: 18px;
    color: #505050;
}
.findInput input {
    border-bottom: solid 1px #b9b9b9;
    width: 380px;
    margin-top: 30px;
    font-family: pLight;
    font-size: 16px;
    padding-bottom: 15px;
}
.findBtn{
    width: 385px;
    height: 53px;
    border-radius: 3px;
    margin-top: 40px;
    background-color: var(--color-main);
    color: white;
    font-family: pSemi;
    font-size: 18px;
}
input[type="number"]::-webkit-outer-spin-button,
input[type="number"]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}
